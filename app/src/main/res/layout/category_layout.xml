<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/bookParty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/cardBookParty"
            android:layout_marginEnd="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:elevation="3dp"
            card_view:cardBackgroundColor="#BE90D4"
            card_view:cardCornerRadius="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Book Party"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="25sp"
                card_view:drawableLeftCompat="@drawable/ic_baseline_celebration_24"
                card_view:drawableTint="@color/white">
            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/bookMC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookParty"
        android:paddingTop="15dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/cardBookMC"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="5dp"
            card_view:cardBackgroundColor="#BF55EC"
            android:elevation="3dp"
            card_view:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Book MC"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="25sp"
                card_view:drawableStartCompat="@drawable/ic_baseline_emoji_people_24"
                card_view:drawableTint="@color/white">
            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/bookEquipment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookMC"
        android:paddingTop="15dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/cardBookEquipment"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="5dp"
            card_view:cardBackgroundColor="@color/signupColor"
            android:elevation="3dp"
            card_view:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Book Equipment"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="25sp"
                card_view:drawableTint="@color/white"
                card_view:drawableStartCompat="@drawable/ic_baseline_cake_24">
            </TextView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>